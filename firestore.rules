rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function getRole() {
      if (request.auth == null) {
        return null;
      }
      // safely read the caller's user document
      let u = get(/databases/$(database)/documents/users/ + request.auth.uid);
      return u.exists() && u.data.role != null ? u.data.role : null;
    }

    function isAdmin() {
      return getRole() == 'admin';
    }

    function isStaff() {
      return getRole() == 'personal';
    }

    // USERS: Clientes pueden leer/escribir su propio doc. Admin tiene acceso total.
    match /users/{userId} {
      allow read, update: if isSignedIn() && (isOwner(userId) || isAdmin());
      // Allow creation only for the authenticated user creating their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    // ORDERS: Clientes solo leen sus propios pedidos. Personal puede leer todos y actualizar 'estatus'. Admin acceso total.
    match /orders/{orderId} {
      allow read: if isSignedIn() && (
        resource.data.idCliente == request.auth.uid || isStaff() || isAdmin()
      );
      allow create: if isSignedIn(); // Staff or clients can create orders
      allow update: if isAdmin() || (isStaff() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['estatus', 'idPersonal']));
      allow delete: if isAdmin();

      // ORDER ITEMS (Subcollection)
      rules_version = '2';
      service cloud.firestore {
        match /databases/{database}/documents {

          // Helper functions
          function isSignedIn() {
            return request.auth != null;
          }

          function isOwner(userId) {
            return request.auth != null && request.auth.uid == userId;
          }

          function getRole() {
            if (request.auth == null) {
              return null;
            }
            let u = get(/databases/$(database)/documents/users/ + request.auth.uid);
            return u.exists() && u.data.role != null ? u.data.role : null;
          }

          function isAdmin() {
            return getRole() == 'admin';
          }

          // Users: each authenticated user can create their own profile and read/update it
          match /users/{userId} {
            // Allow creation only for the authenticated user creating their own document
            allow create: if request.auth != null && request.auth.uid == userId;
            // Read/update allowed for the owner or admins
            allow read, update: if request.auth != null && (request.auth.uid == userId || isAdmin());
            allow delete: if isAdmin();
          }

          // Public read-only services catalog
          match /services/{serviceId} {
            allow read: if true;
            allow write: if isAdmin();
          }

          // Deny everything else by default
          match /{document=**} {
            allow read, write: if false;
          }
        }
      }
